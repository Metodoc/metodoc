<% if @user.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            <%=t(:formContains)%> <%= pluralize(@user.errors.count, "erro(s)") %>.<br><br>
            <ul>
                <% @user.errors.full_messages.each do | msg | %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>