<h1>New question</h1>

<%= form_for(@question) do |f| %>
<%= f.error_messages %>

<p>
    <%= f.label :question %><br />
    <%= f.text_field :question %>
</p>
<p>
    <%= f.label :type_answer %><br />
    <%= f.text_field :type_answer %>
</p>
<p>
    <%= f.submit "Create" %>
</p>
<% end %>

<%= link_to 'Back', questions_path %>
